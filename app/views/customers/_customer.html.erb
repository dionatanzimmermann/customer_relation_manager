<div class="card">
  <div class="card-image">
    <% if customer.image.attached? %>
      <figure class="image is-square">
        <%= image_tag customer.image.variant(resize_to_limit: [300, 300]) %>
      </figure>
    <% else %>
      <figure class="image is-square">
        <%= image_tag "https://via.placeholder.com/300" %>
      </figure>
    <% end %>
  </div>
  <div class="card-content">
    <p class="title is-5"><%= customer.full_name %></p>
    <p class="subtitle is-6"><%= customer.email_address.presence || "No email" %></p>
    <p><%= customer.phone_number %></p>
    <p><%= customer.notes %></p>
  </div>
</div>